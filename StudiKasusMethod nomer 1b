package main;
import java.util.Scanner;
/**
 *
 * @author USER
 */
public class Luassegitiga {
    double a, t;
    double hasil;
    
    void input(){
        System.out.println("Silahkan masukkan panjang alas dan tinggi terlebih dahulu");
        Scanner sc = new Scanner(System.in);
        System.out.println(" Alas = ");
        a = sc.nextDouble();
        System.out.println(" Tinggi = ");
        t = sc.nextDouble();
    }
    void hitung(){
        System.out.println("Proses menghitung");
        hasil = a*t/2;
    }
    double Hasil(){
       return hasil;
        
    }
    
    
    
    
    
}
